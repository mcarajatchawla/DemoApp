library "SharedLib"
env.SONAR_HOST="http://localhost:9000/"
env.NEXUS_REPO="my-app-nexus-repo"
node {
    stage("Startup"){
        repoClone(env.GIT_URL, env.GIT_BRANCH)
    }
    stage("Maven Build"){
        mavenBuild()
    }

    stage("Code Analysis"){
        //sonarScan()
    }

    stage("Security Analysis"){
        parallel(
            checkmarx: {
                checkmarxScan()
            },
            nexusIQ: {
                nexusIQScan()
            }
        )
    }

    stage("Pubish to Nexus"){
        nexusUpload(env.NEXUS_REPO)
    }
}